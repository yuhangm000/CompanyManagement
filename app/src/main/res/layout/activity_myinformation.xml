<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.management.myinformation">
    <LinearLayout
        android:id="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:background="@color/pureWhite"
        android:orientation="vertical"
        android:alpha="0.85"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints">
        <com.company.management.CircleImageView
            android:id="@+id/imageBox"
            android:layout_marginTop="10dip"
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/menu"
        app:layout_constraintTop_toBottomOf="@+id/headView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:alpha="0.8">
        <com.company.management.InformationView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/level"
            app:body_text="昵称:"
            android:layout_weight="1">
        </com.company.management.InformationView>
        <com.company.management.InformationView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/account"
            app:body_text="姓名:"
            android:layout_weight="1">
        </com.company.management.InformationView>
        <com.company.management.InformationView
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/phone"
            app:body_text="我的账号:"
            android:layout_weight="1">
    </com.company.management.InformationView>
        <com.company.management.InformationView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/gender"
            app:body_text="性别:"
            android:layout_weight="1">
        </com.company.management.InformationView>

        <com.company.management.InformationView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:left_logo="@drawable/address"
            app:body_text="地址:"
            android:layout_weight="1">
        </com.company.management.InformationView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
